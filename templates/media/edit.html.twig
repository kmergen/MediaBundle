{% trans_default_domain 'backend' %}
<div class="flex">
  <!-- Left side: Form for editing tags -->
  <div class="w-1/3 p-4">
    <button id="media_edit_modal_close_button" type="button"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-xs">
      {{ 'modal.media.edit.button_close'|trans }}
    </button>
  </div>

  <!-- Right side: Image and details -->
  <div class="w-2/3 p-4">
    <h4 class="mb-2 text-lg font-semibold flex items-center justify-between">
      {{ 'media.edit.modal.title_images'|trans }}
    </h4>
    <img src="{{ asset(media.url) }}" alt="{{ media.name }}" class="rounded-lg shadow-lg">
    <div class="flex">
      <div class="mt-2 text-xs text-gray-600 dark:text-gray-400">{{ media.name }} (Id: {{ media.id }}
        ), {{ media.dimension }}
      </div>

      <!-- Delete form -->
      <div class="ml-auto mt-2">
        {{ include('@Media/media/_delete_form.html.twig', {'showDeleteIcon': true}) }}
      </div>
    </div>
  </div>
</div>