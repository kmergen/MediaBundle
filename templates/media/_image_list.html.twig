{% for image in images %}
	<div
		class="photo-item relative w-[140px] h-[140px] group mb-4 overflow-hidden rounded-lg border border-gray-200 shadow-sm bg-white" data-media-id="{{ image.id }}">
		{# Bild: Object-Cover sorgt dafür, dass das Quadrat sauber gefüllt wird #}
		<img src="{{ asset(image.previewUrl) }}" alt="{{ image.name }}" class="w-full h-full object-cover">

		{# Optional: Dateiname Overlay (nur bei Mouseover sichtbar machen?) #}
		{# <div class="absolute bottom-0 left-0 right-0 bg-black/50 text-white text-[10px] p-1 truncate">{{ image.name }}</div> #}

		{# Optional: Lösch-Button (HTML für dein JS Event) #}
			<button type="button" data-action="click->media-upload#edit" data-media-id="{{ image.id }}" class="absolute top-1 right-1 bg-white/80 hover:bg-white text-gray-700 rounded-full p-1 opacity-0 group-hover:opacity-100 transition-opacity" title="Bearbeiten"> <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewbox="0 0 20 20" fill="currentColor">
				<path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"/>
			</svg>
		</button>
	</div>
{% endfor %}
